
@helper DisplayTableItem(Bookkeeping.Models.ExpensesRecord item, int intSerialNo)
{
    if (item.Category == 0)
    {
        <tr class="text-danger">
            <th class="EL-Table-SerialNo">@intSerialNo</th>
            <th class="EL-Table-Category text-center">@(@item.Category == 1 ? "收入" : "支出")</th>
            <th class="EL-Table-Date text-center">@item.Date.ToShortDateString()</th>
            <th class="EL-Table-Money text-center">@($"{@item.Money:0,0}")</th>
            <th class="EL-Table-memo text-left AutoNewLine">@item.memo</th>
        </tr>
}
else
{
        <tr class="text-primary">
            <th class="EL-Table-SerialNo">@intSerialNo</th>
            <th class="EL-Table-Category text-center">@(@item.Category == 1 ? "收入" : "支出")</th>
            <th class="EL-Table-Date text-center">@item.Date.ToShortDateString()</th>
            <th class="EL-Table-Money text-center">@($"{@item.Money:0,0}")</th>
            <th class="EL-Table-memo text-left AutoNewLine">@item.memo</th>
        </tr>
    }
}