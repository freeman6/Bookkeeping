@model IEnumerable<Bookkeeping.Models.ExpensesRecord>

<br />
@using (Html.BeginForm(new AjaxOptions { UpdateTargetId = "targetDiv", Url = Url.Action("Index") }))
{
    <div class="container">
        <div class="row">
            <div class="well">
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-2 col-md-1 col-lg-1 control-label">類別</label>
                        <div class="col-sm-10 col-md-2 col-lg-2">
                            <select name="Category" class="form-control">
                                <option value="" selected>請選擇</option>
                                <option value="0">支出</option>
                                <option value="1">收入</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-1 col-md-1 col-lg-1 col-md-offset-1">
                            <button type="submit" class="btn btn-default">送　出</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<br />
<h2>我的記帳本</h2>
<div class="container">
    @Html.Partial("_ExpensesList")
</div>

